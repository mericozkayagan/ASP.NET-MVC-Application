@model MVCStok.Models.Entity.TBLMUSTERI
@{
    ViewBag.Title = "Yenimusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Müşteri adı</label>
        @Html.TextAreaFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:blue" })
    </div>
    <div style="margin-top:5px">
        <label>Müşteri Soyadı</label>
        <input type="text" class="form-control" name="MUSTERISOYAD" />
    </div>
    <div style="margin-top:20px">
        <button class="btn btn-info" id="btn1">Müşteri ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert("Müşteri ekleme işlemi yapıldı!"),
        });
    </script>
</form>
